{
  "expo": {
    "name": "SiteLink",
    "slug": "sitelink",
    "scheme": "sitelink",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SiteLink to access your camera for site documentation",
          "microphonePermission": "Allow SiteLink to access your microphone for video recording",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow SiteLink to access your photos for site documentation"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "android": {
      "package": "com.sitelink.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "ios": {
      "bundleIdentifier": "com.sitelink.app",
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow SiteLink to access your camera for site documentation",
        "NSMicrophoneUsageDescription": "Allow SiteLink to access your microphone for video recording",
        "NSPhotoLibraryUsageDescription": "Allow SiteLink to access your photos for site documentation"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "bc3691f2-ae8c-453e-9e25-64f29d2b1c7e"
      }
    },
    "owner": "wdelhia"
  }
}
